.well
  %label= t :contact_details
  %p
    %b= t :name, :scope => [:activerecord, :attributes, :contact]
    = @contact.name
  %p
    %b Message:
    = @contact.message
  %p
    %b Contact:
    = @contact.contact

- if can? :manage, @contact
  = link_to 'Edit', edit_contact_path(@contact)
  \|
  = link_to 'Back', contacts_path
