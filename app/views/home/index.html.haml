.tabbable
  %ul.nav.nav-tabs
    %li.active= link_to "Kloud Catch", "#introduction", :data => {:toggle => "tab"}
    %li= link_to "<i class='icon-facetime-video'></i>&nbsp;&nbsp;#{I18n.t(:watch_video)}".html_safe, "#watch_video", :data => {:toggle => "tab"}
  .tab-content.main
    #introduction.tab-pane.active
      .tabbable.tabs-left
        %ul.nav.nav-tabs
          %li.active= link_to I18n.t(:what_title), "#what_is_it", :data => {:toggle => "tab"}
          %li= link_to I18n.t(:how_title), "#how", :data => {:toggle => "tab"}
        .tab-content
          #what_is_it.tab-pane.active
            .well.white
              %strong
                %em KloudCatch
              %p=t :what_text
              .well
                %dl.dl-horizontal
                  %dt.indent
                    %i.icon-question-sign{:stlye => "font-size: 1.2em;"}
                  %dd= t :question1
              .well
                %dl.dl-horizontal
                  %dt.indent
                    %i.icon-question-sign{:stlye => "font-size: 1.2em;"}
                  %dd= t :question2
              .clearfix
                .image.right= image_tag "home.png"
                %strong
                  %em KloudCatch
                = t :solution_html
                %p
                  %dl.dl-horizontal
                    %dt.indent
                      %i.icon-chevron-right
                    %dd=t :main_advantages1
                    %dt.indent
                      %i.icon-chevron-right
                    %dd=t :main_advantages2
                    %dt.indent
                      %i.icon-chevron-right
                    %dd=t :main_advantages3
                    %dt.indent
                      %i.icon-chevron-right
                    %dd=t :main_advantages4
          #how.tab-pane
            .well.white.clearfix
              .image.right= image_tag "howitworks.png"
              %dl.dl-horizontal.wide
                %dt
                  %span.badge.badge-warning 1
                %dd=t :how_it_works1_html
                %dt
                  %span.badge.badge-warning 2
                %dd=t :how_it_works2
                %dt
                  %span.badge.badge-warning 3
                %dd=t :how_it_works3
                %dt
                  %span.badge.badge-warning 4
                %dd=t :how_it_works4
    #watch_video.tab-pane
      .well.white
        %center= '<iframe src="http://player.vimeo.com/video/35883879" width="500" height="281" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>'.html_safe
